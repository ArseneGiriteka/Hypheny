<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_activity_item"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_margin="6dp">

    <ImageView
        android:id="@+id/contact_item_profile_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Profile Picture"
        android:src="@mipmap/profile_sample_round"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/contact_item_add_friend_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="accept"
                android:textSize="10sp"
                android:layout_gravity="start"/>

            <ImageView
                android:id="@+id/cancel_contact_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/close_icon_foreground"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>